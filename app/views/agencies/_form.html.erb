<%= form_for(@agency) do |f| %>
  <% if @agency.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@agency.errors.count, "error") %> prohibited this agency from being saved:</h2>

      <ul>
      <% @agency.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :agency_type_id %>
    <%= f.select :agency_type_id, AgencyType.all.map{ |at| [at.name, at.id] }%>
  </div>
  <div class="field">
    <!--<%= f.label :security_code %><br />-->
    <%= f.hidden_field :security_code, value: (('A'..'Z').to_a + (0..9).to_a).shuffle[0..9].join, :readonly=>true%>
  </div>
  <div class="actions">
    <%= f.submit :class=>'btn btn-primary' %>
  </div>
<% end %>
